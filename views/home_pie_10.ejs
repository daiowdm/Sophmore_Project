	        }//end for loop
	        
		    window.chartColors = {
		    	red: 'rgb(255, 99, 132)',
		    	orange: 'rgb(255, 159, 64)',
		    	yellow: 'rgb(255, 205, 86)',
		    	green: 'rgb(75, 192, 192)',
		    	blue: 'rgb(54, 162, 235)',
		    	purple: 'rgb(153, 102, 255)',
		    	lime: 'rgb(174, 234, 0)',
		    	grey: 'rgb(201, 203, 207)'
		    };
	
			var config =  {
				type: 'pie',
				data: {
					datasets: [{
						data: [auto, utilities, food, insurance, taxes, housing, miscellaneousE],
						backgroundColor: [
							window.chartColors.red,
							window.chartColors.orange,
							window.chartColors.yellow,
