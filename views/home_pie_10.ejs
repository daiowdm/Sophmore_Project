	            		console.log(utilities);
	            		break;
	            	case "Food":
	            		food += rows[i].amount;
	            		console.log(food);
	            		break;
	            	case "Insurance":
	            		insurance += rows[i].amount;
	            		console.log(insurance);
	            		break;
	            	case "Tax":
	            		taxes += rows[i].amount;
